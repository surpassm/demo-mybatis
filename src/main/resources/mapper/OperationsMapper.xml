<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liaoin.demo.mapper.OperationsMapper">

    <resultMap id="ResultMapParentDTO" type="com.liaoin.demo.domain.OperationsDTO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="parent_id" property="parentId"/>
        <result column="department_index" property="describes"/>
        <result column="name" property="name"/>
        <result column="describes" property="describes"/>
        <result column="apiUrl" property="apiUrl"/>
    </resultMap>
    <select id="findAllParent" resultMap="ResultMapParentDTO">
        select * from t_operations where parent_id is null and is_delete = 0
    </select>

    <resultMap id="ResultMapChildesDTO" type="com.liaoin.demo.domain.OperationsDTO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="parent_id" property="parentId"/>
        <result column="department_index" property="describes"/>
        <result column="name" property="name"/>
        <result column="describes" property="describes"/>
        <result column="apiUrl" property="apiUrl"/>
        <collection property="childes" ofType="NewsLabel" select="findAllChild" column="id"/>
    </resultMap>

    <select id="findAllChild" resultMap = "ResultMapChildesDTO">
        select * from t_operations where parent_id = #{parentId} and is_delete = 0
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liaoin.demo.mapper.GroupMapper">

    <resultMap id="ResultMapParentDTO" type="com.liaoin.demo.domain.GroupDTO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="parent_id" property="parentId"/>
        <result column="department_index" property="describes"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="findAllParent" resultMap="ResultMapParentDTO">
        select * from t_group where parent_id is null and is_delete = 0
    </select>

    <resultMap id="ResultMapChildesDTO" type="com.liaoin.demo.domain.GroupDTO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="parent_id" property="parentId"/>
        <result column="department_index" property="describes"/>
        <result column="name" property="name"/>
        <collection property="childes" ofType="NewsLabel" select="findAllChild" column="id"/>
    </resultMap>

    <select id="findAllChild" resultMap = "ResultMapChildesDTO">
        select * from t_group where parent_id = #{parentId} and is_delete = 0
    </select>

    <select id="findDepartmentByGroupId" resultType="com.liaoin.demo.entity.Department">
        SELECT
            d.*
        FROM
            m_group_department gd
        LEFT JOIN t_department d ON gd.department_id = d.id
        WHERE
            gd.group_id = #{groupId}
        AND d.parent_id IS NULL
        and d.is_delete = 0
    </select>

    <select id="findMenuByGroupId" resultType="com.liaoin.demo.entity.Menu">
        SELECT
            m.*
        FROM
            m_group_menu gm
        LEFT JOIN t_menu m ON gm.menu_id = m.id
        WHERE
            gm.group_id = #{groupId}
        AND m.parent_id IS NULL
        and m.is_delete = 0
    </select>

    <select id="findRoleByGroupId" resultType="com.liaoin.demo.entity.Role">
        SELECT
            r.*
        FROM
            m_group_role gr
        LEFT JOIN t_role r ON gr.role_id = r.id
        WHERE
            gr.group_id = #{groupId}
        and r.is_delete = 0
    </select>
</mapper>
